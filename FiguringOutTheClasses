class Stars extends gameobjects; --inheritance
    Attributes:
      private int size;
    Methods:
      void eventOccur(PLayer p); /// increment the score by 1 -Dependency with Player
      int getSize();

class ColourSwitches extends gameobjects --inheritance
    Attributes:
      private int radius;
      private float rotationSpeed;
    Methods:
      void setRotationSpeed();   
      void eventOccur(Ball b); ///change the colour of the ball --Dependency with Ball
      int getRadius();


class obstacles extends gameobjects: --inheritance
    Attributes:
      private float rotation_speed;
      private float posx;
      private float posy;
    Methods:
      public float getSpeed();
      public float getposx();
      public float getposy();

class Circularobs extends obstacles: inheritance
    Attribute:
      private float radius; ///maybe
    Methods:
