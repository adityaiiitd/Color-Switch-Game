Color-Switch-Game classes extracts:





class Game
    Attributes:
        private Arraylist<Player> player; --guessing a composition maybe
        private Gameobjects gameobjects; -- similarly a compositon here aswell
        
    Methods:
        doWhatUserSays(); {which maybe startGame(),loadGame(),exit() through menu}
        

class Player
    Attributes:
        private Ball ball; //knows about the ball -- create assoication single way
        private int score; //stars collected is score 
    Methods:
        getScore();
        ///and we have the interrupts 
        
        void pauseGame();
        void restartGame();
        void saveGame();



/// confused if to be added or not
class Constants
    Attributes:
        private int gravity;
    Methods:
        int getGravity();
///




class GameObjects
        Attributes: (creating maybe a list and then changing order or speed with which 
they appear? )
            private Arraylist<Stars> startsarraylst;    
            private Arraylist<ColourSwitches>colourswitches;
            private Arraylist<Obstacles>obstaclesarraylist;
        
        Methods: (guessing some method overriding maybe? Since its an infinite game no need of rendering every object I suppose)
            makeAppear();    
            makeDisappear();    

class Stars
        Attributes:
            private int size;
        Methods:
            void eventOccur(); /// increment the score by 1
            int getSize();

class ColourSwitches 
        Attributes:
            private int radius;
            private float rotationSpeed;
        Methods:
            void setRotationSpeed();    
            void eventOccur(); /// change the colour of the ball
            int getRadius();

abstract class obstacles
        Attributes:
            private float rotation_speed;
            private float posx;
            private float posy;
        Methods:
            default float getRoatationSpeed();
            default float getPosx();
            default float getPosy();
            default void setX();
            default void setY();
            default void setRotationSpeed();
            abstract void eventOccur(); ///destroy the ball or let the ball pass through
            
class Circularobs extends obstacles
        Attribute:
            private float radius;  ///maybe
        Methods:
            float getRadius();
            void setRadius();
            void eventOccur();

class Triangularobs extends obstacles
        Attribute:
            private float halflength;
        Methods:
            float gethalflength();
            void sethalflength();
            void eventOccur();

class Squareobs extends obstacles
        Attribute:
            private float sidelen;

        Methods:
            float getlen();
            void setSidelen();
            void eventOccur();


class Linelikeobs extends obstacles
        Attributes:
            private float linelength;
        Methods:
            float getLinelength();
            void setLinelength();
            void eventOccur();

class Ball
    Attribute:
        private String color;
        private float posY;
        private int status;
        private float posX = const; //set it to center and don't provide setter I guess.
          
  
        
    Methods:
        void setColor();
        void setPosY();
        void setStatus();
        int getStatus();
        





